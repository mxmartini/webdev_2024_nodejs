<link rel="stylesheet" href="/public/resources/header.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<div class="header">

    <div class="options">
        <% if (!user) { %>
        <button onclick="window.open('/login', '_self')">Login</button>
        <% } else { %>
        <div class="dropdown">
        
            <button class="dropbtn">
                <i class="fa fa-user-circle"></i> <%=user.name%>
            </button>
                <div class="dropdown-content">
                    <a href="#"><%=user.email%></a>
                    <a href="#"><small><%=new Date(user.lastLogin).toLocaleString("en-US", { dateStyle: "short", timeStyle: "short", timeZone: "America/Sao_Paulo" })%></small></a>
                    <a href="#" onclick="window.open('/logout', '_self')">Logout</a>
            </div>
        </div>
        <% } %>
        <div class="dropdown">
            
            <button class="dropbtn">
                <i class="fa fa-shopping-cart"></i>
            </button>
                <div class="dropdown-content">
                <% for (item in groupedCart) { %>
                    <a href="#">
                        <b><%=item%></b><br>x<%=groupedCart[item]%>
                    </a>
                <% } %>
                <a href="#" onclick="window.open('/order', '_self')">Make order</a>
            </div>
        </div>
    
    </div>

</div>